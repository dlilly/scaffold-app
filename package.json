{
  "name": "scaffold-app",
  "version": "0.1.0",
  "watch": {
    "dev": "src"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "ci-package": "docker build --tag $scaffold_docker_host/$scaffold_docker_path/$npm_package_name:$scaffold_docker_tag .",
    "ci-push": "docker push $scaffold_docker_host/$scaffold_docker_path/$npm_package_name:$scaffold_docker_tag",
    "ci-deploy": "helm uninstall ${npm_package_name} --namespace ${npm_package_name} && helm upgrade ${npm_package_name} helm-chart --install --wait --force --namespace ${npm_package_name} --set image.tag=${scaffold_docker_tag}",
    "ci-deploy-initial": "helm upgrade ${npm_package_name} helm-chart --install --wait --force --namespace ${npm_package_name} --set image.tag=${scaffold_docker_tag}",
    "ci-undeploy": "helm uninstall ${npm_package_name} --namespace ${npm_package_name}"
  },
  "keywords": [
    "commercetools",
    "node",
    "microservices"
  ],
  "author": "commercetools",
  "license": "MIT",
  "repository": "",
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^4.15.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "jest": "^22.1.1",
    "lint-staged": "^6.0.1",
    "prettier": "^1.10.2",
    "prettier-eslint-cli": "^4.7.1",
    "validate-commit": "^3.4.0"
  },
  "dependencies": {
    "@dlillyatx/scaffold": "^0.1.2",
    "@google-cloud/pubsub": "^1.6.0",
    "app-root-path": "^3.0.0",
    "async-lodash": "^1.0.9",
    "body-parser": "^1.19.0",
    "clean-deep": "^3.3.0",
    "cors": "^2.8.5",
    "cross-env": "^5.1.3",
    "ctvault": "^1.0.27",
    "express": "^4.17.1",
    "firebase-admin": "^8.11.0",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.15",
    "nconf": "^0.10.0",
    "pluralize": "^8.0.0",
    "redoc": "^1.20.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "slugify": "^1.4.0"
  },
  "jest": {
    "rootDir": "src",
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "coverageDirectory": "../coverage",
    "collectCoverageFrom": [
      "services/**/*.js"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "prettier-eslint --write",
      "git add"
    ]
  }
}
